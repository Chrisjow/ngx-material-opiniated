ng-container([ngSwitch]="type")
    button.iconbtn(mat-icon-button, *ngSwitchCase="'icon'", [color]="color", [attr.disabled]="disabled")
        ng-container(*ngTemplateOutlet="iconOutlet")
    button.iconbtn(mat-fab, *ngSwitchCase="'fab'", [color]="color", [attr.disabled]="disabled")
        ng-container(*ngTemplateOutlet="iconOutlet")
    button.iconbtn(mat-mini-fab, *ngSwitchCase="'minifab'", [color]="color", [attr.disabled]="disabled")
        ng-container(*ngTemplateOutlet="iconOutlet")
    button(mat-raised-button, *ngSwitchCase="'raised'", [color]="color", [attr.disabled]="disabled")
        ng-container(*ngTemplateOutlet="contentOutlet")
    button(mat-stroked-button, *ngSwitchCase="'stroked'", [color]="color", [attr.disabled]="disabled")
        ng-container(*ngTemplateOutlet="contentOutlet")
    button(mat-flat-button, *ngSwitchCase="'flat'", [color]="color", [attr.disabled]="disabled")
        ng-container(*ngTemplateOutlet="contentOutlet")
    button(mat-button, *ngSwitchCase="'basic'", [color]="color", [attr.disabled]="disabled")
        ng-container(*ngTemplateOutlet="contentOutlet")
    button.iconbtn(mat-mini-fab, *ngSwitchCase="'minifab-content'", [color]="color", [attr.disabled]="disabled")
        ng-container(*ngTemplateOutlet="contentOutlet")

ng-template(#contentOutlet)
    mat-icon(*ngIf="icon && !loading && type !== 'minifab-content'")
        fa-icon([icon]="icon")
    div.loadingind(*ngIf="loading")
    span.btncontent(#btnContent)
        ng-content
ng-template(#iconOutlet)
    mat-icon(*ngIf="icon && !loading")
        fa-icon([icon]="icon")
    div.loadingind(*ngIf="loading")